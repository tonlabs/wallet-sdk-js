{
    "name": "@eversdk/wallet",
    "version": "0.0.1",
    "description": "Ever SDK Wallet Kit",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/tonlabs/typescript-codestyle"
    },
    "keywords": ["TON", "Wallet", "EverOS", "SDK"],
    "author": "EVER DEV SOLUTIONS LTD.",
    "licenses": [
        {
            "type": "Apache-2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0"
        }
    ],
    "homepage": "https://everos.dev/",
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
        "eslint": "eslint \"**/*.ts\"",
        "eslint-fix": "eslint \"**/*.ts\" --fix",
        "tsc": "tsc",
        "copy-files": "copyfiles -u 1 src/assets/* dist",
        "build": "rimraf dist && npm run eslint &&  tsc --project tsconfig.build.json && npm run copy-files",
        "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
        "start": "NODE_ENV=production node dist/main.js"
    },
    "dependencies": {
        "@eversdk/appkit": "^0.3.1"
    },
    "devDependencies": {
        "@eversdk/lib-node": "^1.37.0",
        "@types/jest": "^27.4.1",
        "@types/node": "^16.0.1",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "copyfiles": "^2.4.1",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jest": "^26.1.4",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^4.3.8",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.8",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": ["npm run eslint", "npm run format"]
    }
}
